#!/bin/sh

set -e

echo "Removing unwanted files"

# Get POTFILES_DOT_IN
. /usr/share/amnesia/build/variables

find /usr/share/doc -type f -name changelog.gz        -delete
find /usr/share/doc -type f -name changelog.Debian.gz -delete
find /usr/share/doc -type f -name NEWS.Debian.gz      -delete

# Remove .in files managed by intltool
rm $POTFILES_DOT_IN

# Remove files that were excluded from ikiwiki.setup recently.
# This is for people who have a too-clever caching build setup that
# goes on shipping files forever as long as it has built them once.
rm -rf /usr/share/doc/tails/website/promote/slides
